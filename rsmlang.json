{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "rsml",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#fields"
		},
		{
			"include": "#selectors"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "--\\[\\[",
					"end": "\\]\\]",
					"name": "comment.block"
				},
				{
					"name": "comment",
					"match": "--.*"
				}
			]
		},

		"fields": {
			"begin": "{",
			"end": "}",
			"match": "((?!.*--\\[\\[)(?!.*--)[^=]+)(?:=)((?!.*--\\[\\[)(?!.*--).+)",
			"captures": {
				"1": {
					"patterns": [
						{
							"name": "variable.other.constant",
							"match": "\\$.+"
						},
						{
							"name": "keyword.control.untitled",
							"match": "@.+"
						},
						{
							"name": "entity.other.attribute-name",
							"match": "[^$@]+"
						}
						
					]
				},
				"2": {
					"patterns": [
						{
							"name": "string",
							"match": "#[0-9a-fA-F]+"
						},

						{
							"name": "string",
							"match": "tw:(slate|gray|zinc|neutral|stone|red|orange|amber|yellow|lime|green|emerald|teal|cyan|sky|blue|indigo|violet|purple|fuchsia|pink|rose)(:(950|900|800|700|600|500|400|300|200|100|50))?"
						},

						{
							"name": "variable.other.constant",
							"match": "\\$.+"
						},

						{
							"name": "string",
							"begin": "\"",
							"end": "\"",
							"patterns": [
								{
									"name": "constant.character.escape",
									"match": "\\\\."
								}
							]
						},
						{
							"name": "string",
							"begin": "'",
							"end": "'",
							"patterns": [
								{
									"name": "constant.character.escape",
									"match": "\\\\."
								}
							]
						},

						{
							"name": "constant.numeric",
							"match": "[0-9](%|px)?"
						},


						{
							"match": "([^ \n\t]+) \\(",
							"captures": {
								"1": {
									"name": "entity.name.type.enum"
								}
							}
						}
					]

					
					
				}
			}
		},

		"selectors": {
			"patterns": [{
				"name": "entity.name.tag.css",
				"match": "(#|::|:|.)[^ ]+ ({)"
			}]
		},

		"keywords": {
			"match": "@(derive|priority)",
			"name": "keyword.control.untitled"
		},

		"strings": {
			"patterns": [
				{
					"name": "string",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape",
							"match": "\\\\."
						}
					]
				}
			]
		}
	},
	"scopeName": "source.rsml"
}